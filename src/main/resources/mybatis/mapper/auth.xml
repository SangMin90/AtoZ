    <insert id="saveRefreshToken" parameterType="com.atoz.authentication.RefreshToken">
        INSERT INTO refresh_token (token_key, token_value)
        VALUES(#{tokenKey}, #{tokenValue})
    </insert>

    <update id="updateRefreshToken" parameterType="com.atoz.authentication.RefreshToken">
        UPDATE refresh_token
        SET token_value = #{tokenValue}
        WHERE token_key = #{tokenKey}
    </update>

    <select id="findByKey" resultType="com.atoz.authentication.RefreshToken" parameterType="java.lang.String">
        select
            token_key AS tokenKey,
            token_value AS tokenValue
        from refresh_token
        where token_key = #{tokenKey};
    </select>

    <delete id="deleteRefreshToken" parameterType="java.lang.String">
        delete from refresh_token
        where token_key = #{tokenKey};
    </delete>
</mapper>